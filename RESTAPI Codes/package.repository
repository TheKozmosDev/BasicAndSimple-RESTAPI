package repository;

import java.awt.desktop.UserSessionEvent;
import java.util.ArrayList;
import java.util.List;
import org.springframework.stereotype.Repository;

@Repository
public class UserRepository {
	List<User> usersList = new ArrayList<>();
	
	//I don't use a database because I want it to be simple and fast.
	public UserRepository() {
		usersList.add(new User("koska","pruska","1"));
		usersList.add(new User("Terry","Davis","2"));
		usersList.add(new User("tohru","kobayashi","3"));
		usersList.add(new User("hatsune","miku","4"));
		usersList.add(new User("kasane","teto","5"));
	}
	
	public List<User> getList(){
		return usersList;
	}
	
	public User getUser(String id) {
		for (User user : usersList) {
			if(user.getId().equals(id)) {
				return user;
			}
		}
		return null;
	}
	
	public User getUserWithParams(String firstname,String lastname) {
		for (User user : usersList) {
			if(user.getFirstname().equals(firstname) && user.getLastname().equals(lastname)) {
				return user;
			}
		}
		return (User) usersList;
	}
}
